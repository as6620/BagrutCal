<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BagrutSecondActivity">

    <TextView
        android:id="@+id/tVMath"
        android:layout_width="116dp"
        android:layout_height="46dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="מתמטיקה"
        app:layout_constraintBottom_toBottomOf="@+id/eTGradeMath"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/eTNumMath"
        app:layout_constraintTop_toTopOf="@+id/eTGradeMath"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tVEnglish"
        android:layout_width="116dp"
        android:layout_height="46dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="אנגלית"
        app:layout_constraintBottom_toBottomOf="@+id/eTGradeEnglish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/eTNumEnglish"
        app:layout_constraintTop_toTopOf="@+id/eTGradeEnglish"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/eTNumMath"
        android:layout_width="64dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/eTGradeMath"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintStart_toEndOf="@+id/eTGradeMath"
        app:layout_constraintTop_toTopOf="@+id/eTGradeMath"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/eTNumEnglish"
        android:layout_width="64dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/eTGradeEnglish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintStart_toEndOf="@+id/eTGradeEnglish"
        app:layout_constraintTop_toTopOf="@+id/eTGradeEnglish"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/eTGradeMath"
        android:layout_width="155dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <EditText
        android:id="@+id/eTGradeEnglish"
        android:layout_width="155dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113" />

    <TextView
        android:id="@+id/tVOptions"
        android:layout_width="168dp"
        android:layout_height="53dp"
        android:gravity="center"
        android:text="אופן בחירת דרך בגרות "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.235" />

    <Button
        android:id="@+id/btnPrev1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="68dp"
        android:onClick="goPrev1"
        android:text="Prev"
        app:layout_constraintBottom_toBottomOf="@+id/btnNext2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.862"
        app:layout_constraintStart_toEndOf="@+id/btnNext2"
        app:layout_constraintTop_toTopOf="@+id/btnNext2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnNext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goNext2"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.191"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.887" />

    <SeekBar
        android:id="@+id/seekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="264dp"
        android:layout_height="46dp"
        android:max="2"
        android:progress="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.398" />

    <TextView
        android:id="@+id/question"
        android:layout_width="360dp"
        android:layout_height="41dp"
        android:text="כמה סה&quot;כ הגברות יש לך"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.323" />

</androidx.constraintlayout.widget.ConstraintLayout>